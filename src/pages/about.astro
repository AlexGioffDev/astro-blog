---
const pageTile = "About Me";

const personalInfo = {
  firstName: "Alex",
  country: "Italy",
  occupation: "Software Developer",
  hobbies: ["reading", "basket", "football"],
};

const skills = ["HTML", "CSS", "JS", "React", "NextJS", "Astro", "Python"];

const happy = true;
const finished = false;
const goal = 3;
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout pageTitle={pageTile}>
  <h2>... and my new astro site!</h2>
  <p>Here are a few facts about me:</p>
  <ul>
    <li>My name is {personalInfo.firstName}</li>
    <li>
      I live in {personalInfo.country} and I work as a {personalInfo.occupation}
    </li>
    {
      personalInfo.hobbies.length >= 2 && (
        <li>
          Two of my hobbies are: {personalInfo.hobbies[0]} and{" "}
          {personalInfo.hobbies[1]}
        </li>
      )
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>My goal is not 3 days.</p>
    )
  }
</BaseLayout>
